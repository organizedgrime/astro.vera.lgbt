---
interface Props {
  date: Date;
  no_year?: Boolean;
}

const { date, no_year } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", 

    no_year ?
        {
          month: "short",
          day: "numeric",
        } :
        {
          month: "short",
          day: "numeric",
          year: "numeric",
        } 
    )
  }
</time>
