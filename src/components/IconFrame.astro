---
import AppIcon from './rives/AppIcon';
const { title, appIcon, url } = Astro.props;
---
<div class="container">
  <a href={url}>
    <div class="icon-container">
        <AppIcon title={title} client:visible />
    </div>
    <span>{title}</span>
  </a>
</div>

<style>
  /* Main Container */
  .container {
    margin: 0 auto;
  }

  /* Icon-Container */
	.icon-container {
    /* Shape */
    width: 200px;
    height: 200px;
    border-radius: 20%;
    /* Masking */
    overflow: hidden;
    /* Default bg color if RIV doesn't load */
    background-color: #ececec;
  }

  /* App Title */
  span {
    display: table;
    margin: 0 auto;
  }

  a {
    color: black;
    text-decoration: none;
  }
</style>