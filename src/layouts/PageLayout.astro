---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
	$('h6').addClass('text-lg');
	$('h5').addClass('text-xl');
	$('h4').addClass('text-2xl');
	$('h3').addClass('text-3xl');
	$('h2').addClass('text-4xl');
	$('h1').addClass('text-5xl');
</script>
